{
	"schemaVersion": 1,
	"id": "pc-dev-lib",
	"version": "${version}",
	"name": "PC Develop Lib",
	"description": "A library for Minecraft Fabric mod development.",
	"authors": [
		"REN Yuantong"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "Apache-2.0",
	"icon": "assets/pc-dev-lib/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"io.github.piscescup.mc.fabric.PCDevelopLib"
		],
		"fabric-datagen": [
			"io.github.piscescup.mc.fabric.PCDevelopLibDataGenerator"
		]
	},
	"mixins": [
		"pc-dev-lib.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.21.10",
		"java": ">=25",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}